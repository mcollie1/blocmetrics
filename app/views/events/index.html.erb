<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
<div class="jumbotron">
  <h3> Event Data for Application</h3>
  <div class="row">
    <div class="col-md-6">
      <h5 class="text-centered">Most Pages Viewed</h5>
      <%= pie_chart Event.group(:topic_name).count %>
    </div>
    <div class="col-md-6">
      <h5 class="text-centered">User Activity</h5>
      <%= column_chart Event.group(:app_user).count %>
      <small>* id-0 is non-user activity</small>
    </div>
    <div class="col-md-6">
      <h5 class="text-centered">TBD</h5>
      <%= line_chart({20.day.ago => 5, 300.day.ago => 4, "2013-05-07 00:00:00 UTC" => 7}) %>
    </div>
  </div>
</div>